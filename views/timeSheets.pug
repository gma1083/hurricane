extends layout

block content

    br

    //- div(class = "container")
    table(class = "table table-striped")
        thead(class = "thead-dark")
            th(scope = "col") Date
            th(scope = "col") Employee
            th(scope = "col") Job Number
            th(scope = "col") Job ID
            th(scope = "col") Estimate Crew
            th(scope = "col") Estiamte HOURS
            th(scope = "col") TM Crew
            th(scope = "col") TM HOURS
            th(scope = "col") Lunch?
            th(scope = "col") Done?
            th(scope = "col") Off-Hauled?
            th(scope = "col") Yards Hauled?
            th(scope = "col") Notes
            th(scopt = 'col') Edit
            th(scopt = 'col') Delete
            each sheet in timeSheetsArray
                tr#timeSheet_list_item   
                    td #{sheet.date}
                    td #{sheet.employeeID}
                    td #{sheet.jobNumber}
                    td #{sheet.jobID}
                    td #{sheet.estCrewSize}
                    td #{sheet.estCrewHours}
                    td #{sheet.tmCrewSize}
                    td #{sheet.tmCrewHours}
                    td #{sheet.lunchTaken}
                    td #{sheet.jobFinished}
                    td #{sheet.offHauled}
                    td #{sheet.yardsHauled}
                    td #{sheet.notes}
                    td 
                        button(type="button", class="btn btn-info", onclick="editTimesheet(\"" +  sheet._id + "\")") Edit
                    td 
                        button(type="button", class="btn btn-danger", onclick="deleteTimesheet(\"" +  sheet._id + "\")") Delete

    script.
        function deleteTimesheet(timesheet_id) {
            window.location = '/timeSheets/delete/' + timesheet_id;
        }
        function editTimesheet(timesheet_id) {
            window.location = '/timeSheets/edit/' + timesheet_id;
        }