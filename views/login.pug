extends layout

block content

    div(class='container')
        form(class='form', name='loginForm', method='post')
            div(class='formgroup')
                div.input
                    span.label Email
                    input(type='email', class='form-control', name='email')
                div.input
                    span.label Password
                    input(type='password', class='form-control', name='password')
                br
                div.actions
                    input(type="submit", class="btn btn-primary", value="Login")